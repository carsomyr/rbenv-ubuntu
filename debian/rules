#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
# export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

RBENV_VERSION=$(shell head -n 1 -- debian/changelog \
	| sed -E -e "s/^rbenv-jruby[1-2]\\.[0-9] \\((.*)-.*\\) \\w+; urgency=low\$$/jruby-\\1/g")
PACKAGE_NAME=$(shell head -n 1 -- debian/changelog \
	| sed -E -e "s/^(rbenv-jruby[1-2]\\.[0-9]) \\(.*\\) \\w+; urgency=low\$$/\\1/g")

ifeq ($(DEB_BUILD_ARCH), amd64)
	ARCH=x86_64
else ifeq ($(DEB_BUILD_ARCH), armhf)
	ARCH=arm
else ifeq ($(DEB_BUILD_ARCH), i386)
	ARCH=i386
endif

build: build-indep build-arch

build-indep: build-indep-stamp
build-indep-stamp:

	dh_testdir

	touch -- $@

build-arch: build-arch-stamp
build-arch-stamp:

	dh_testdir

	mkdir -p -- debian/build-tmp

	rsync -rl --delete \
		--exclude /debian \
		-- . debian/build-tmp/jruby

	for jar in debian/build-tmp/jruby/build_lib/jffi-*-*.jar; do \
		if [ "$$jar" != "debian/build-tmp/jruby/build_lib/jffi-$(ARCH)-Linux.jar" ]; then \
			rm -f -- "$$jar"; \
		fi \
	done

	cd -- debian/build-tmp/jruby && ant; cd -- ../../..

	for executable in debian/build-tmp/jruby/bin/*; do \
		if [ ! -x "$$executable" ]; then \
			rm -f -- "$$executable"; \
		fi \
	done

	rm -f -- debian/build-tmp/jruby/bin/generate_parser \
		debian/build-tmp/jruby/bin/jruby.bash \
		debian/build-tmp/jruby/bin/jruby.sh

	rm -rf -- debian/build-tmp/jruby/lib/native/Darwin

	cd -- debian/build-tmp/jruby/bin \
		&& ./ruby -- gem install -l ../build_lib/rake-*.gem ../build_lib/jruby-launcher-*.gem \
		&& ./ruby -- gem uninstall -x rake jruby-launcher \
		; cd -- ../../../..

	m4 -D RBENV_VERSION=$(RBENV_VERSION) -- debian/build/$(PACKAGE_NAME).postrm.m4 \
		> debian/$(PACKAGE_NAME).postrm

	touch -- $@

install: install-indep install-arch

install-indep:
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	dh_install

install-arch:

	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs

	ln -sfn -- build-tmp debian/tmp

	dh_install

# binary: binary-indep binary-arch
binary: binary-arch

# binary-indep: DH_OPTIONS=-i
# binary-indep: build-indep install-indep
#	$(MAKE) -f debian/rules -- binary-common

binary-arch: DH_OPTIONS=-a
binary-arch: build-arch install-arch
	$(MAKE) -f debian/rules -- binary-common

binary-common:
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installman
	dh_lintian
	dh_strip
	dh_link
	dh_compress
	dh_fixperms
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

clean:

	dh_testdir
	dh_testroot

	rm -f -- build-indep-stamp build-arch-stamp
	rm -f -- debian/$(PACKAGE_NAME).postrm
	rm -rf -- debian/build-tmp

	dh_clean

.PHONY: build build-indep build-arch install install-indep install-arch binary binary-indep binary-arch binary-common \
	clean
